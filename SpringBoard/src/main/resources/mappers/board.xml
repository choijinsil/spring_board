<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="board">
	<sql id="criCondition">
		<if test="type=='W'.toString()">
		where writer like '%'||#{keyword}||'%'
		</if>
		<if test="type=='T'.toString()">
		where title like '%'||#{keyword}||'%'
		</if>
	</sql>

	<select id="selectBno" resultType="int">
		select tbl_board_seq.nextval from dual
	</select>
	
	<insert id="insert">
		insert into tbl_board(bno,title,content,writer)
		values(#{bno},#{title},#{content},#{writer})
	</insert>
	
	<!-- list.jsp에 출력될 목록 조회 -->
	<select id="selectAll" resultType="BoardVO">
		select 
		/*+ INDEX_DESC(tbl_board board_pk) */
		bno, title, writer, regdate, updatedate from tbl_board
		<include refid="criCondition"/>
		
	</select>
	
	<!-- get.jsp 또는 수정폼에 출력될 내용 조회 -->
	<select id="select" resultType="BoardVO">
		select bno, title, content, writer , regdate, updatedate
		from tbl_board
		where bno=#{bno}
	</select>
	
	<!-- 게시글 수정 -->
	<update id="update">
		update tbl_board 
		set title=#{title}, content=#{content}, updatedate=sysdate 
		where bno=#{bno} 
	</update>
	
	<!-- 특정글 삭제 -->
	<delete id="delete">
		delete from tbl_board where bno=#{bno} 
	</delete>
	
	<!-- 전체 페이지 조회 (검색어 기준)-->
	<select id="getTotalCount" resultType="int">
		select count(*) from tbl_board
		<include refid="criCondition"/>
	</select>
	
</mapper>
